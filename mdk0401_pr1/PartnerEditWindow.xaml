<Window x:Class="mdk0401_pr1.PartnerEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk0401_pr1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        FontFamily="Bahnschrift Light SemiCondensed"
        Title="Редактирование заявки" Height="450" Width="800"
        Icon="/Resources/NewTechnologies.ico">
    
    <Grid Background="White" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Grid Grid.Row="0" Background="#BBDCFA">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Image Width="45" Height="45" Source="/Resources/NewTechnologies.png"/>
                <TextBlock Text="Редактирование заявки" FontSize="18" FontWeight="Bold" 
           VerticalAlignment="Center" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
        <!-- Форма -->

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="10">
            <!-- Тип партнера -->
            <TextBlock Text="Тип партнера*:"/>
            <ComboBox x:Name="TypeComboBox" DisplayMemberPath="Type" SelectedValuePath="ID"/>

            <!-- Наименование -->
            <TextBlock Text="Наименование*:"/>
            <TextBox x:Name="NameTextBox" MaxLength="100"/>

            <!-- ФИО директора -->
            <TextBlock Text="ФИО директора*:"/>
            <TextBox x:Name="DirectorTextBox" MaxLength="100"/>

            <!-- Адрес -->
            <TextBlock Text="Адрес*:"/>
            <TextBox x:Name="AddressTextBox" MaxLength="200"/>

            <!-- Рейтинг -->
            <TextBlock Text="Рейтинг*:"/>
            <TextBox x:Name="RatingTextBox" /> <!-- PreviewTextInput="RatingTextBox_PreviewTextInput" --> 

            <!-- Телефон -->
            <TextBlock Text="Телефон*:"/>
            <TextBox x:Name="PhoneTextBox" MaxLength="20"/>

            <!-- Email -->
            <TextBlock Text="Email:"/>
            <TextBox x:Name="EmailTextBox" MaxLength="100"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Отмена" Width="80" Margin="0,0,10,0" Click="CancelBtn_Click"/>
            <Button Content="Сохранить" Width="80" Background="#0C4882" Foreground="White" Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
