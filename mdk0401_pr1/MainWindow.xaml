<Window x:Class="mdk0401_pr1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mdk0401_pr1"
        mc:Ignorable="d"
        FontFamily="Bahnschrift Light SemiCondensed"
        Title="Заявки партнеров" Height="450" Width="800"
        Icon="/Resources/NewTechnologies.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#BBDCFA">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10">
                <Image Width="45" Height="45" Source="/Resources/NewTechnologies.png"/>
                <TextBlock Text="Заявки партнеров" FontSize="18" FontWeight="Bold" 
                           VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button x:Name="BtnAdd" Content="Добавить заявку" Background="#0C4882" Foreground="White" Margin="20,0,0,0" Padding="10,5" Click="BtnAdd_Click"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="PartnersListBox" Margin="10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="0,5"
                                MouseLeftButtonUp="PartnerItem_MouseLeftButtonUp"
                                Cursor="Hand" 
                                Width="750" Height="120"
                                HorizontalAlignment="Center">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#F5F5F5"/>
                                            <Setter Property="BorderBrush" Value="#0C4882"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Grid Margin="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="{Binding Type}" 
                                           FontWeight="Bold" FontSize="14" 
                                           Margin="0,0,0,2"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="{Binding Name}" 
                                           FontWeight="Bold" FontSize="14"
                                           Margin="0,2,0,2"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="{Binding Address}" 
                                           Margin="0,2,0,2" 
                                           TextWrapping="Wrap"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" 
                                           Text="{Binding Phone}" 
                                           Margin="0,2,0,2"/>

                                <TextBlock Grid.Row="4" Grid.Column="0" 
                                           Text="{Binding Rate, StringFormat='Рейтинг: {0}'}" 
                                           Margin="0,2,0,0"/>

                                <TextBlock Grid.Row="0" Grid.Column="1" Grid.RowSpan="5"
                                           Text="{Binding TotalCost}" 
                                           FontWeight="Bold" FontSize="16"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center"
                                           Margin="20,0,0,0"
                                           Foreground="DarkGreen"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
